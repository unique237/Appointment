<!DOCTYPE html>
<html lang="en">

<head>
  <title>Manage Appointments</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body class="bg-light">
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3">Manage Appointments</h1>
      <a href="/logout" class="btn btn-danger">Logout</a>
    </div>

    <table class="table table-bordered table-striped">
      <thead class="table-dark">
        <tr>
          <th scope="col">Date</th>
          <th scope="col">Time</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% appointments.forEach((appt) => { %>
        <tr>
          <td><%= appt.date %></td>
          <td><%= appt.time %></td>
          <td>
            <div class="d-flex gap-2">
              <form action="/cancel" method="POST">
                <input type="hidden" name="id" value="<%= appt.id %>">
                <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
              </form>
              <form action="/reschedule/<%= appt.id %>" method="GET">
                <button type="submit" class="btn btn-primary btn-sm">Reschedule</button>
              </form>
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="text-center mt-4">
      <a href="/schedule" class="btn btn-success">Schedule New Appointment</a>
    </div>
  </div>
</body>

</html>
